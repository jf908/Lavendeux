{
  "package": {
    "productName": "Lavendeux",
    "version": "../package.json"
  },
  "build": {
    "distDir": "../build",
    "devPath": "http://localhost:3000",
    "beforeDevCommand": "npm run start",
    "beforeBuildCommand": "npm run build"
  },
  "tauri": {
    "cli": {
      "description": "Extensible inline parser",
      "args": [{
        "name": "config",
        "description": "path to directory that will hold the configuration and extensions. Defaults to ~/.lavendeux",
        "short": "c",
        "takesValue": true
      },

      {
        "name": "log-level",
        "description": "default logging level - for debug only. Defaults to error",
        "short": "l",
        "takesValue": true,
        "possibleValues": ["silly", "debug", "warning", "error", "critical"]
      }]
    },
    "systemTray": {
      "iconPath": "icons/icon",
      "iconAsTemplate": true
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.rscarson.lavendeux",
      "icon": [
        "icons/32x32.png",
        "icons/icon.png",
        "icons/icon.ico",
        "icons/icon.icns"
      ],
      "resources": [],
      "externalBin": [],
      "copyright": "",
      "category": "DeveloperTool",
      "shortDescription": "",
      "longDescription": "",
      "deb": {
        "depends": []
      },
      "macOS": {
        "frameworks": [],
        "minimumSystemVersion": "",
        "exceptionDomain": "",
        "signingIdentity": null,
        "providerShortName": null,
        "entitlements": null
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "updater": {
      "active": false
    },
    "allowlist": {
      "all": true
    },
    "windows": [
      {
        "title": "Lavendeux",
        "width": 800,
        "height": 600,
        "resizable": true,
        "visible": false,
        "fullscreen": false,
        "url": "/",
        "theme": "Light"
      },

      {
        "label": "error",
        "decorations": false,
        "title": "Error",
        "width": 500, "height": 110,
        "x": 0, "y": 0,
        "focus": true,
        "resizable": false,
        "visible": false,
        "fullscreen": false,
        "transparent": true,
        "skipTaskbar": true,
        "url": "/error"
      }
    ],
    "security": {
      "csp": "default-src blob: data: filesystem: ws: wss: http: https: tauri: 'unsafe-eval' 'unsafe-inline' 'self'"
    }
  }
}